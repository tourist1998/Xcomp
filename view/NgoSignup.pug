    script(src='https://cdnjs.cloudflare.com/ajax/libs/axios/0.18.0/axios.min.js')
    script(src='/js/NGOsignup.js')
    script.
      function passid_validation(passid,mx,my)
      {
      var passid_len = passid.length;
      if (passid_len == 0 ||passid_len >= my || passid_len < mx)
      {
      alert("Password should not be empty / length be between "+mx+" to "+my);
      return false;
      }
      return true;
      }
      function allLetter(uname)
      {
      var letters = /^[A-Za-z]+$/;
      if(uname.match(letters))
      {
      return true;
      }
      else
      {
      alert('Username must have alphabet characters only');
      return false;
      }
      }
      function ValidateEmail(uemail)
      {
      var mailformat = /\S+@\S+\.\S+/;
      if(uemail.match(mailformat))
      {
      return true;
      }
      else
      {
      alert("You have entered an invalid email address!");
      return false;
      }
      }
      function Validatephone(uphone)
      {
      var regx=/^(\+91[\-\s]?)?[0]?(91)?[789]\d{9}$/;
      if(uphone.match(regx))
      {
      return true;
      }
      else
      {
      alert("You have entered an invalid phone number");
      return false;
      }
      }
      function validateform()
      {
      var username = document.getElementById('UserName').value; 
      var pass = document.getElementById('Password').value;
      var confirmpass = document.getElementById('PasswordConfirm').value;
      var name = document.getElementById('Name').value;
      var phone = document.getElementById('Phone').value;
      var dirname = document.getElementById('DirectorName').value;
      var dirphone = document.getElementById('DirectorPhone').value;
      var email = document.getElementById('Email Id').value;
      if(passid_validation(pass,7,12)==false)
      {
      return false;
      }
      if(allLetter(name)==false)
      {
      return false;
      }
      if(allLetter(dirname)==false)
      {
      return false;
      }
      if(Validatephone(phone)==false)
      {
      return false;
      }
      if(ValidateEmail(email)==false)
      {
      return false;
      }
      if(Validatephone(dirphone)==false)
      {
      return false;
      }
      return true;
      }
