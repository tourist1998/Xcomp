html
  head
  body
    title  NGO Registration Form
    style.
      body{
      background: url(poverty-child-ap.jpg);
      background-size: cover;
      font-family: sans-serif;
      }
      .wrap{
      max-width: 350px;
      border-radius: 20px;
      margin:auto;
      background: rgba(0,0,0,0.8);
      box-sizing: border-box;
      padding: 40px;
      color:#fff;
      margin-top: 100px;
      }
      h2{
      text-align: center;
      }
      input[type=text],input[type=password]{
      width:100%;
      box-sizing: border-box;
      padding: 12px 5px;
      background: rgba(0,0,0,0.10);
      outline: none;
      border: none;
      border-bottom: 1px dotted #fff;
      color: #fff;
      border-radius: 5px;
      margin: 5px;
      font-weight: bold;
      }
      input[type=submit]{
      width:100%;
      box-sizing: border-box;
      padding: 10px 0;
      margin-top: 30px;
      outline: none;
      border: none;
      background: #60adde;
      border-radius: 20px;
      font-size: 20px;
      color: #fff;
      border-bottom: 1px dotted #fff;
      color: #fff;
      border-radius: 10px;
      margin: 5px;
      font-weight: bold;
      }
    .wrap
      h2  Sign Up as an NGO
      form#NGO
        input.input(type='text', placeholder='Username', required='' , id='UserName' ) 
        input.input(type='password', placeholder='Password', required='',id='Password')
        input.input(type='password', placeholder='Confirm Password', required='',id='PasswordConfirm')
        input.input(type='text', placeholder="NGO Name", required='',id='Name')
        input.input(type='tel', placeholder='Phone Number', required='Phone Number' ,id='Phone')
        input.input(type='text', placeholder="Director's Name", required='',id='DirectorName')
        input.input(type='text', placeholder="Director's Phone Number", required='',id='DirectorPhone')
        input.input(type='email', placeholder='Email ID', required='',id='Email Id')
        input.input(type='text', placeholder='Address', required='',id='Address')
        input.input(type='submit', value='Submit',id='Submit')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/axios/0.18.0/axios.min.js')
    script(src='/js/NGOsignup.js')
